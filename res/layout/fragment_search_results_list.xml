<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchResultsActivity">
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
    	android:paddingBottom="@dimen/drawable_horizontal_margin"
    	android:paddingTop="@dimen/drawable_horizontal_margin"
    	android:paddingLeft="@dimen/drawable_horizontal_margin"
    	android:paddingRight="@dimen/drawable_horizontal_margin"
	    android:background="@drawable/custom_border" >

   	 	<TextView
   	 	    android:id="@+id/total_cost"
   	 	    android:layout_width="wrap_content"
   	 	    android:layout_height="wrap_content"
   	 	    android:text="@string/total_cost"
   	 	    android:textSize="18sp"
   	 	    android:paddingRight="@dimen/activity_horizontal_margin" />

   	 	<TextView
   	 	    android:id="@+id/cost"
   	 	    android:layout_width="wrap_content"
   	 	    android:layout_height="wrap_content"
   	 	    android:maxLength="5"
   	 	    android:hint="N/A" />

   	 	<TextView
   	 	    android:id="@+id/price_symbol"
   	 	    android:layout_width="wrap_content"
   	 	    android:layout_height="wrap_content"
   	 	    android:hint="@string/euro" />
   	 	
    </LinearLayout>
    
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"
        android:clickable="true"
    	android:longClickable="true" >
    </ListView>
    
	<TextView 
        android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_results"/>
     
</LinearLayout>