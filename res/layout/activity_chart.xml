<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChartActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#59B6E5"
        android:paddingLeft="90dp"
        android:paddingTop="@dimen/drawable_horizontal_margin"
        android:text="@string/heading_search_diagrams"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/custom_border"
        android:paddingBottom="@dimen/drawable_horizontal_margin"
        android:paddingLeft="@dimen/drawable_horizontal_margin"
        android:paddingRight="@dimen/drawable_horizontal_margin"
        android:paddingTop="@dimen/drawable_horizontal_margin" >

        <TextView
            android:id="@+id/total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/drawable_horizontal_margin"
            android:text="@string/total_cost"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/price_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/euro"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart_activity"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="90dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
        
    </LinearLayout>

</LinearLayout>