<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BudgetActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/drawable_horizontal_margin"
        android:paddingLeft="40dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context=".BudgetActivity" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heading_activity_budget"
            android:textSize="20sp"
            android:textStyle="bold" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:prompt="@string/category_prompt"
        android:entries="@array/categories_array" />
    
    <EditText
        android:id="@+id/money_preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:hint="@string/money_preference" />
    
    <EditText
        android:id="@+id/from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/from_date"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />
	
    <EditText
        android:id="@+id/until_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/until_date"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"	    
        android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".BudgetActivity" >
	    
	    <CheckBox
	        android:id="@+id/same_on"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:paddingRight="@dimen/activity_horizontal_margin"
	        android:text="@string/same_on" />

	    <Spinner
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:prompt="@string/member_prompt"
        	android:entries="@array/members_array" />
	
	</LinearLayout>
	    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".BudgetActivity" >
	    
	    <CheckBox
	        android:id="@+id/notify"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/notify" />
    
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".BudgetActivity" >

	    <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:text="@string/submit"
	        android:onClick="submitBudgetPreferences" />
    
    </RelativeLayout>

	
</LinearLayout>