<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/offers_row"
    android:background="@android:color/white"
    android:paddingTop="@dimen/drawable_horizontal_margin">

    <TextView android:id="@+id/id"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin" >
        
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:orientation="vertical" >
	        
		    <TextView
			    android:id="@+id/name_hint"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="@dimen/activity_horizontal_margin"
			    android:textSize="11sp" 
			    android:hint="@string/name_hint" />
		    
			<TextView
			    android:id="@+id/name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="@dimen/activity_horizontal_margin"
			    android:textSize="16sp"
			    android:textStyle="bold" />
			
		</LinearLayout>
		
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	    
		    <TextView
				    android:id="@+id/price_hint"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:textSize="11sp"
				    android:gravity="center"
				    android:hint="@string/price_hint" />
		    
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
				android:layout_marginRight="@dimen/drawable_horizontal_margin" >

				<TextView
				    android:id="@+id/price_symbol"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentTop="true"
				    android:layout_marginRight="14dp"
				    android:hint="@string/euro"
				    android:textSize="16sp" />

				<TextView
				    android:id="@+id/price"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentTop="true"
				    android:layout_toLeftOf="@+id/price_symbol"
				    android:layout_marginRight="4dp"
				    android:textSize="16sp"
				    android:textAlignment="viewEnd" />

			</RelativeLayout>
			
			
		</LinearLayout>
		
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	    
		    <TextView
				    android:id="@+id/discount_hint"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:textSize="11sp"
				    android:gravity="center"
				    android:hint="@string/discount_hint" />
		    
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
				android:layout_marginRight="@dimen/drawable_horizontal_margin" >

				<TextView
				    android:id="@+id/price_symbol"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentTop="true"
				    android:layout_marginRight="14dp"
				    android:hint="@string/euro"
				    android:textSize="16sp" />

				<TextView
				    android:id="@+id/discount"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentTop="true"
				    android:layout_toLeftOf="@+id/price_symbol"
				    android:layout_marginRight="4dp"
				    android:textSize="16sp"
				    android:textAlignment="viewEnd" />

			</RelativeLayout>
			
			
		</LinearLayout>
		
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin" >
		
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical" >
			
			<TextView
			    android:id="@+id/store_category_hint"
			    android:layout_width="wrap_content"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:textSize="11sp" />
			
			<TextView
			    android:id="@+id/store_category"
			    android:layout_width="wrap_content"
			    android:layout_height="0dp"
			    android:layout_weight="1"
			    android:textSize="16sp" />
		</LinearLayout>
		
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical" >
		    
			<TextView
			    android:id="@+id/until_date_hint"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="11sp"
			    android:hint="@string/until_date_hint" />
			
			<TextView
			    android:id="@+id/until_date"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>
	 
	<LinearLayout
	    android:background="#59B6E5"
	    android:layout_width="match_parent"
	    android:layout_height="0.3dp" >
    </LinearLayout>
</LinearLayout>