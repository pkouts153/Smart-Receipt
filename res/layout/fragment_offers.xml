<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/offers_results"
    tools:context=".OffersActivity$DummySectionFragment">
   
	<android.support.v4.view.ViewPager
	    android:id="@+id/list_pager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/h_white_transparent"
	    tools:context=".SearchResultsActivity" >

	    <!--
	    This title strip will display the currently visible page title, as well as the page
	    titles for adjacent pages.
	    -->
	
	    <android.support.v4.view.PagerTitleStrip
	        android:id="@+id/pager_title_strip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top"
	        android:background="#59B6E5"
	        android:paddingBottom="4dp"
	        android:paddingTop="4dp"
	        android:textColor="#fff" />
	    
		<FrameLayout
		    android:id="@+id/pager_fragment_frame"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
   			android:background="@android:color/white"
		    android:paddingTop="28dp" >

		</FrameLayout>
		
	</android.support.v4.view.ViewPager>
	
</LinearLayout>