<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <LinearLayout
	    android:layout_width="35dp"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/g_light_blue"
	    tools:context=".MainActivity" >
	    
		<ImageView
		    android:id="@+id/save"
    		android:paddingTop="43dp"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
			android:layout_width="wrap_content"
			android:layout_height="93dp"
			android:src="@drawable/save"
			android:clickable="true"
			android:onClick="goToSave" >
		</ImageView>
		
		<ImageView
		    android:id="@+id/budget"
    		android:paddingTop="@dimen/main_pading_top"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/main_heights"
			android:src="@drawable/budget"
			android:clickable="true"
			android:onClick="goToBudget" >
		</ImageView>
		
		<ImageView
		    android:id="@+id/search"
    		android:paddingTop="@dimen/main_pading_top"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/main_heights"
			android:src="@drawable/search"
			android:clickable="true"
			android:onClick="goToSearch" >
		</ImageView>
		
		<ImageView
		    android:id="@+id/offers"
    		android:paddingTop="@dimen/main_pading_top"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/main_heights"
			android:src="@drawable/offers"
			android:clickable="true" >
		</ImageView>
		
		<ImageView
		    android:id="@+id/family"
    		android:paddingTop="@dimen/main_pading_top"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/main_heights"
			android:src="@drawable/family"
			android:clickable="true" >
		</ImageView>
		
		<ImageView
		    android:id="@+id/list"
    		android:paddingTop="@dimen/main_pading_top"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/main_heights"
			android:src="@drawable/list"
			android:clickable="true" >
		</ImageView>
		
		<ImageView
		    android:id="@+id/map"
    		android:paddingTop="@dimen/main_pading_top"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/main_heights"
			android:src="@drawable/map"
			android:clickable="true" >
		</ImageView>
		
    </LinearLayout>
    
	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    tools:context=".MainActivity" >
	
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingBottom="18dp"
		    tools:context=".MainActivity" >
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:text="@string/heading" />
		
		</LinearLayout>
		
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/main_heights"
	        android:textSize="19sp"
	        android:text="@string/main_save"
	        android:clickable="true"
		    android:paddingTop="@dimen/main_pading_top"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
	        android:onClick="goToSave" />
    			  
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/main_heights"
	        android:textSize="19sp"
	        android:text="@string/main_budget"
	        android:clickable="true"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
		    android:paddingTop="@dimen/main_pading_top"
	        android:onClick="goToBudget" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/main_heights"
	        android:textSize="19sp"
	        android:text="@string/main_search"
	        android:clickable="true"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
		    android:paddingTop="@dimen/main_pading_top"
	        android:onClick="goToSearch" />
	
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/main_heights"
		    android:textSize="19sp"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
		    android:paddingTop="@dimen/main_pading_top"
	        android:text="@string/main_offers"
	        android:clickable="true"
	        android:onClick="goToOffers" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/main_heights"
	        android:textSize="19sp"
	        android:text="@string/main_family"
	        android:clickable="true"  
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
		    android:paddingTop="@dimen/main_pading_top"
	        android:onClick="goToFamily" />
		    	 
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/main_heights"
	        android:textSize="19sp"
	        android:text="@string/main_list"
	        android:clickable="true"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
		    android:paddingTop="@dimen/main_pading_top"
	        android:onClick="goToList" />
		
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/main_heights"
	        android:textSize="19sp"
	        android:text="@string/main_stores"
	        android:clickable="true"
		    android:paddingLeft="@dimen/drawable_horizontal_margin"
		    android:paddingRight="@dimen/drawable_horizontal_margin"
		    android:paddingTop="@dimen/main_pading_top"
	        android:onClick="goToStores" />
		   			    
		
	</LinearLayout>
	
</LinearLayout>